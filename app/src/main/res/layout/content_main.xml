<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.khalid.sharektest.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/LoginPage_UserName_editText"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/underline"
        android:hint="User name"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary" />

    <EditText
        android:id="@+id/LoginPage_Password_editText"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/underline"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"

        />

    <Button
        android:id="@+id/LoginPage_Login_button"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LoginPage_SignUp_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@color/white"
        android:text="Login"

        />

    <Button
        android:id="@+id/LoginPage_SignUp_button"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LoginPage_Skip_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@color/white"
        android:text="Don't have account? Sign Up" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:src="@drawable/sign_up_page" />
    <Button
        android:id="@+id/LoginPage_Skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:text="Skip Login" />

</RelativeLayout>
