<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/proposalItem_image_imageView"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:paddingRight="2sp"
        android:src="@drawable/blank_photo" />

    <TextView
        android:id="@+id/proposalItem_title_textView"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/proposalItem_image_imageView"
        android:layout_toRightOf="@+id/proposalItem_image_imageView"
        android:text="Proposal Title"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/proposalItem_description_textView"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proposalItem_title_textView"
        android:layout_toEndOf="@+id/proposalItem_image_imageView"
        android:layout_toRightOf="@+id/proposalItem_image_imageView"
        android:text="you can write any bala7 here"
        android:visibility="gone" />

    <TextView
        android:id="@+id/proposalItem_duration_textView"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proposalItem_description_textView"
        android:layout_marginLeft="50sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/proposalItem_price_textView"
        android:layout_toRightOf="@+id/proposalItem_price_textView"
        android:text="Duration"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/proposalItem_price_textView"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proposalItem_description_textView"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/proposalItem_image_imageView"
        android:layout_toRightOf="@+id/proposalItem_image_imageView"
        android:text="price"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/proposalItem_pieces_textView"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proposalItem_duration_textView"
        android:layout_marginLeft="50sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/proposalItem_from_textView"
        android:layout_toRightOf="@+id/proposalItem_from_textView"
        android:text="Pieces"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/proposalItem_from_textView"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proposalItem_price_textView"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/proposalItem_image_imageView"
        android:layout_toRightOf="@+id/proposalItem_image_imageView"
        android:text="From"
        android:textColor="@color/black" />

</RelativeLayout>