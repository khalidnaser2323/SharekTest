<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/productItem_image_imageView"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/sign_up_page1" />

    <TextView
        android:id="@+id/productItem_title_textView"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productItem_image_imageView"
        android:text="product Title" />

    <TextView
        android:id="@+id/productItem_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productItem_title_textView"
        android:text="you can write any bala7 here" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productItem_description_textView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productItem_price_textView"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"


            />

        <TextView
            android:id="@+id/productItem_city_textView"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginStart="100sp"
            android:text="City" />
    </LinearLayout>

</RelativeLayout>